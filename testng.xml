<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="RestAssured API Automation" verbose="1">
	<listeners>
		<listener class-name="com.demo.listeners.Listener" />
	</listeners>
	<test name="ReqRes API Automation">
		<classes>
			<class name="com.demo.tests.CreateUser" />
			<class name="com.demo.tests.GetUsers" />
			<class name="com.demo.tests.DeleteUser" />
			<class name="com.demo.tests.UpdateUser" />
		</classes>
	</test>
	<test name="Local API">
		<classes>
			<class name="com.demo.localAPI.AddCricketer" />
			<class name="com.demo.localAPI.DeleteCricketer" />
			<class name="com.demo.localAPI.GetCricketers" />
			<class name="com.demo.localAPI.UpdateCricketer" />
		</classes>
	</test>
</suite>